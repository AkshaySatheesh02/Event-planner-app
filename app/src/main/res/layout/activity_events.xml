<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/eventsbg"
    tools:context=".EventsActivity">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="155dp"
        android:layout_marginBottom="130dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#F7F0EA"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"

                        android:src="@drawable/wedding"></ImageView>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/weddingbtn"
                        android:text="Book Now"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginStart="220dp"
                        android:textAllCaps="true"
                        android:backgroundTint="#300D6B"
                        android:layout_marginTop="-70dp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F7F0EA"

                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"

                        android:src="@drawable/birthday"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/birthdaybtn"
                        android:text="Book Now"
                        android:textColor="@color/white"

                        android:textAlignment="center"
                        android:layout_marginStart="220dp"
                        android:textAllCaps="true"
                        android:backgroundTint="#300D6B"
                        android:layout_marginTop="-70dp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F7F0EA"

                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"

                        android:src="@drawable/farewell" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/farewellbtn"
                        android:text="Book Now"
                        android:textColor="@color/white"

                        android:textAlignment="center"
                        android:layout_marginStart="220dp"
                        android:textAllCaps="true"
                        android:backgroundTint="#300D6B"
                        android:layout_marginTop="-70dp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F7F0EA"

                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"

                        android:src="@drawable/naming"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/namingbtn"
                        android:text="Book Now"
                        android:textColor="@color/white"

                        android:textAlignment="center"
                        android:layout_marginStart="220dp"
                        android:textAllCaps="true"
                        android:backgroundTint="#300D6B"
                        android:layout_marginTop="-70dp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/homebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="-75dp"
        android:background="@color/transparent"
        android:textColor="#E5DAD0"
        app:icon="@drawable/baseline_home_24"
        app:iconSize="38dp"
        app:iconTint="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginTop="-690dp"
        android:background="@color/transparent"
        android:textColor="#040303"
        app:icon="@drawable/baseline_logout_24"
        app:iconSize="38dp"
        app:iconTint="#300D6B" />


</LinearLayout>























